{
  "name": "grep-panel",
  "displayName": "Grep Panel",
  "description": "Keep Grep/Ripgrep results in a panel.",
  "version": "0.0.3",
  "license": "MIT",
  "homepage": "https://github.com/chrisjdavies/vscode-grep-panel",
  "publisher": "chrisjdavies",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisjdavies/vscode-grep-panel.git"
  },
  "bugs": {
    "url": "https://github.com/chrisjdavies/vscode-grep-panel/issues"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "grep",
    "ripgrep",
    "search",
    "panel"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "grepPanel",
          "title": "Grep",
          "icon": "images/grep.png"
        }
      ]
    },
    "views": {
      "grepPanel": [
        {
          "id": "grepResults",
          "name": "Grep"
        }
      ]
    },
    "commands": [
      {
        "command": "grep-panel.grep",
        "title": "Grep Panel: Grep..."
      },
      {
        "command": "grep-panel.clear",
        "title": "Grep Panel: Clear Results"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
